<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewPedido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:focusable="true"
    android:elevation="3dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/txtStringPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:text=""
                android:textColor="@color/primary_text"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_id_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/txtStringPedido"
                android:layout_toRightOf="@+id/txtStringPedido"
                android:text="01568"
                android:textColor="@color/primary_text"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@drawable/btn_rounded_secondary"
                android:text="De One" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:text="Direccion recogida:"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_addressStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manzana 24 Casa 22 Barrio Tamasagra"
                android:textColor="@color/primary_text"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:text="Direccion Entrega:"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_addressEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cll 20a #1-38 Barrio Las Mercedes"
                android:textColor="@color/primary_text"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:text="Telefono:"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3158280698"
                android:textColor="@color/primary_text"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

